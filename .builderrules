box-shadow: rgba(255, 255, 255, 0.2) 1px 1px 2px inset, rgba(0, 0, 0, 0.2) -1px -1px 2px inset, rgba(0, 0, 0, 0.1) 0px 2px 4px; transform: translateY(-1px
border: none; border-radius: [include the randomly generated values for these]; font-family: MedievalSharp, serif; font-size: 16px; font-weight: normal; cursor: pointer; )
